@model Issue

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 pt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete issue</h2>
			<hr />
		</div>

		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" disabled />
		</div>
		<div class="mb-3">
			<label asp-for="Description"></label>
			<textarea asp-for="Description" class="form-control" disabled></textarea>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px;">Delete</button>
		<a asp-controller="Issue" asp-action="Index" class="btn btn-secondary" style="width:150px;">Back to list</a>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial.cshtml" />
}